# Database
DATABASE_URL="postgresql://username:password@localhost:5432/prepwyse_commerce?schema=public"

# Redis (for rate limiting and caching)
# For local development: redis://localhost:6379
# For Upstash (serverless): https://[default]:[password]@[endpoint].upstash.io
REDIS_URL="redis://localhost:6379"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_publishable_key
CLERK_SECRET_KEY=your_secret_key
CLERK_WEBHOOK_SECRET=your_webhook_secret

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# AI Providers (configure at least one for AI-powered features)
# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (alternative to OpenAI)
GEMINI_API_KEY=your_gemini_api_key_here

# Razorpay Payment Gateway (Phase C)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Sentry Error Tracking (optional, but recommended for production)
# Get your DSN from https://sentry.io/
SENTRY_DSN=

# API Usage Monitoring (for OpenAI/Gemini cost tracking)
# Set daily cost limit in USD (default: $10)
API_USAGE_DAILY_LIMIT=10

# Set hourly cost limit in USD (default: $2)
API_USAGE_HOURLY_LIMIT=2

# Set monthly budget in USD (default: $300)
API_USAGE_MONTHLY_BUDGET=300

# Set maximum API calls per day (default: 1000)
API_USAGE_CALLS_PER_DAY=1000
