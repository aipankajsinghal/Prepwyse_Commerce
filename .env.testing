# Testing Environment Configuration
# Copy this file to .env.local and fill in with test credentials

# Database (for local testing with Docker)
DATABASE_URL="postgresql://prepwyse:prepwyse_password@localhost:5435/prepwyse_db?schema=public"

# Clerk Authentication (get from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_test_key_here
CLERK_SECRET_KEY=sk_test_your_test_secret_here
CLERK_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# OpenAI API (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-test_your_openai_key_here

# Razorpay Payment Gateway (get test keys from https://dashboard.razorpay.com)
# Use test keys from: https://razorpay.com/docs/payments/test-payment-method/
RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_TEST_KEY_SECRET
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID

# Test Cards for Razorpay:
# Success: 4111 1111 1111 1111
# Failed: 4222 2222 2222 2222
# Recurring: 4012 8888 8888 1881

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Sentry Error Tracking (optional, get from https://sentry.io)
SENTRY_DSN=https://test_key@sentry.io/test_project_id

# Redis for Rate Limiting (optional - local dev works without)
REDIS_URL=redis://localhost:6379

# API Usage Monitoring Limits
API_USAGE_DAILY_LIMIT=10
API_USAGE_HOURLY_LIMIT=2
API_USAGE_MONTHLY_BUDGET=300
API_USAGE_CALLS_PER_DAY=1000

# Node Environment
NODE_ENV=development
