// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String         @id @default(cuid())
  clerkId               String         @unique
  email                 String         @unique
  name                  String?
  role                  UserRole       @default(STUDENT) // User role for authorization
  grade                 String?        // "11", "12", "CUET"
  preferredDifficulty   String?        // AI-determined preferred difficulty level
  weakAreas             Json?          // AI-tracked weak subject/chapter areas
  strongAreas           Json?          // AI-tracked strong subject/chapter areas
  learningStyle         String?        // AI-determined learning style
  lastRecommendation    DateTime?      // Last time AI generated recommendations
  // Gamification fields
  points                Int            @default(0)
  level                 Int            @default(1)
  currentStreak         Int            @default(0)
  longestStreak         Int            @default(0)
  lastActivityDate      DateTime?
  // Personalization fields
  preferredLanguage     String         @default("en") // "en", "hi"
  favoriteSubjects      Json?          // Array of subject IDs
  favoriteChapters      Json?          // Array of chapter IDs
  dashboardLayout       Json?          // Custom dashboard widget preferences
  notificationPrefs     Json?          // Notification preferences
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  quizAttempts          QuizAttempt[]
  mockTests             MockTestAttempt[]
  recommendations       Recommendation[]
  achievements          Achievement[]
  leaderboardEntries    Leaderboard[]
  studyPlans            StudyPlan[]
  flashcardProgress     FlashcardProgress[]
  // Phase C: Subscription fields
  subscription          Subscription?
  referralCode          String?          @unique
  referredBy            String?          // Referral code used to sign up
  referrals             Referral[]       @relation("ReferrerUser")
  referralRewards       ReferralReward[]
  transactions          Transaction[]
  // Phase E: Adaptive Learning
  learningPaths         LearningPath[]   @relation("UserLearningPaths")
}

model Subject {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  icon        String?
  createdAt   DateTime  @default(now())
  chapters    Chapter[]
}

model Chapter {
  id              String    @id @default(cuid())
  name            String
  subjectId       String
  subject         Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  description     String?
  order           Int       @default(0)
  createdAt       DateTime  @default(now())
  questions       Question[]
  flashcards      Flashcard[]
  
  @@unique([subjectId, name])
}

model Question {
  id              String    @id @default(cuid())
  chapterId       String
  chapter         Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  questionText    String
  options         Json      // Array of options
  correctAnswer   String
  explanation     String?
  difficulty      String    @default("medium") // "easy", "medium", "hard"
  createdAt       DateTime  @default(now())
}

model Quiz {
  id              String        @id @default(cuid())
  title           String
  description     String?
  subjectId       String?
  chapterIds      Json          // Array of chapter IDs
  questionCount   Int           @default(10)
  duration        Int           // in minutes
  createdAt       DateTime      @default(now())
  attempts        QuizAttempt[]
}

model QuizAttempt {
  id                    String    @id @default(cuid())
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizId                String
  quiz                  Quiz      @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers               Json      // Array of {questionId, selectedAnswer, markedForReview, answeredAt}
  score                 Int       @default(0)
  totalQuestions        Int
  status                String    @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED
  currentQuestionIndex  Int       @default(0)
  durationSeconds       Int?      // Total duration in seconds
  timeRemaining         Int?      // Time remaining in seconds
  startedAt             DateTime  @default(now())
  completedAt           DateTime?
  timeSpent             Int?      // in seconds
}

model MockTest {
  id              String              @id @default(cuid())
  title           String
  description     String?
  examType        String              // "CUET", "Class11", "Class12"
  totalQuestions  Int
  duration        Int                 // in minutes
  sections        Json                // Array of sections with subjects
  createdAt       DateTime            @default(now())
  attempts        MockTestAttempt[]
  questions       MockTestQuestion[]
}

model MockTestAttempt {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  mockTestId      String
  mockTest        MockTest  @relation(fields: [mockTestId], references: [id], onDelete: Cascade)
  answers         Json      // Array of {questionId, selectedAnswer}
  score           Int       @default(0)
  totalQuestions  Int
  sectionScores   Json      // Scores by section
  startedAt       DateTime  @default(now())
  completedAt     DateTime?
  timeSpent       Int?      // in seconds
}

model MockTestQuestion {
  id              String    @id @default(cuid())
  mockTestId      String
  mockTest        MockTest  @relation(fields: [mockTestId], references: [id], onDelete: Cascade)
  questionNumber  Int
  section         String
  questionText    String
  options         Json      // Array of options
  correctAnswer   String
  explanation     String?
  difficulty      String    @default("medium") // "easy", "medium", "hard"
  createdAt       DateTime  @default(now())
  
  @@index([mockTestId, questionNumber])
}

model Recommendation {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type            String    // "study_plan", "topic", "difficulty_adjustment", "content"
  title           String
  description     String
  content         Json      // AI-generated recommendation details
  priority        Int       @default(5) // 1-10, higher is more important
  isRead          Boolean   @default(false)
  createdAt       DateTime  @default(now())
  expiresAt       DateTime? // Optional expiry for time-sensitive recommendations
}

// Phase B: Gamification System Models
model Achievement {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // "badge", "milestone", "streak", "perfect_score", "challenge"
  name        String
  description String
  icon        String
  category    String   // "quiz", "study", "social", "streak"
  points      Int      @default(0) // Points awarded for this achievement
  unlockedAt  DateTime @default(now())
}

model Leaderboard {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  points    Int      @default(0)
  rank      Int
  period    String   // "daily", "weekly", "monthly", "all_time"
  periodKey String   // e.g., "2025-W47" for weekly, "2025-11" for monthly
  updatedAt DateTime @updatedAt
  
  @@unique([userId, period, periodKey])
  @@index([period, periodKey, points])
}

model Challenge {
  id            String   @id @default(cuid())
  title         String
  description   String
  type          String   // "quiz_count", "accuracy", "streak", "speed"
  requirement   Json     // Challenge requirements
  reward        Int      // Points awarded
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
}

// Phase B: Smart Study Planner Models
model StudyPlan {
  id               String        @id @default(cuid())
  userId           String
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  title            String
  description      String?
  examDate         DateTime?
  targetScore      Int?
  weeklyHours      Int           // Hours available per week
  preferredTime    Json?         // Preferred study time slots
  isActive         Boolean       @default(true)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  sessions         StudySession[]
}

model StudySession {
  id              String    @id @default(cuid())
  planId          String
  plan            StudyPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  chapterId       String
  title           String
  description     String?
  type            String    // "video", "quiz", "flashcard", "revision"
  scheduledDate   DateTime
  duration        Int       // in minutes
  completed       Boolean   @default(false)
  completedAt     DateTime?
  notes           String?
  createdAt       DateTime  @default(now())
  
  @@index([planId, scheduledDate])
}

// Phase B: Smart Flashcards Models
model Flashcard {
  id          String              @id @default(cuid())
  chapterId   String
  chapter     Chapter             @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  front       String              // Question/Term
  back        String              // Answer/Definition
  difficulty  String              @default("medium") // "easy", "medium", "hard"
  tags        Json?               // Array of tags
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  progress    FlashcardProgress[]
}

model FlashcardProgress {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  flashcardId     String
  flashcard       Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)
  easeFactor      Float     @default(2.5) // SM-2 algorithm: ease factor
  interval        Int       @default(0)   // SM-2 algorithm: interval in days
  repetitions     Int       @default(0)   // SM-2 algorithm: number of repetitions
  nextReviewDate  DateTime  @default(now())
  lastReviewedAt  DateTime?
  quality         Int?      // Last review quality (0-5)
  reviewCount     Int       @default(0)
  
  @@unique([userId, flashcardId])
  @@index([userId, nextReviewDate])
}

// Phase C: Subscription System Models
model SubscriptionPlan {
  id              String         @id @default(cuid())
  name            String         @unique // "Basic", "Premium", "Pro"
  displayName     String
  description     String
  price           Decimal        @db.Decimal(10, 2) // Monthly price in INR
  durationDays    Int            // Duration in days
  features        Json           // Array of features
  isActive        Boolean        @default(true)
  order           Int            @default(0) // Display order
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  subscriptions   Subscription[]
}

model Subscription {
  id                  String           @id @default(cuid())
  userId              String           @unique
  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  planId              String
  plan                SubscriptionPlan @relation(fields: [planId], references: [id])
  status              String           @default("trial") // "trial", "active", "cancelled", "expired"
  razorpayOrderId     String?
  razorpayPaymentId   String?
  razorpaySignature   String?
  trialEndsAt         DateTime?
  startDate           DateTime         @default(now())
  endDate             DateTime
  autoRenew           Boolean          @default(true)
  cancelledAt         DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  
  @@index([status, endDate])
}

model Transaction {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type                String   // "subscription", "referral_bonus"
  amount              Decimal  @db.Decimal(10, 2)
  currency            String   @default("INR")
  status              String   // "pending", "completed", "failed", "refunded"
  razorpayOrderId     String?
  razorpayPaymentId   String?
  razorpaySignature   String?
  description         String?
  metadata            Json?    // Additional transaction details
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([status])
}

// Phase C: Referral System Models
model Referral {
  id              String    @id @default(cuid())
  referrerId      String
  referrer        User      @relation("ReferrerUser", fields: [referrerId], references: [id], onDelete: Cascade)
  refereeEmail    String
  refereeUserId   String?   // Set when referee signs up
  status          String    @default("pending") // "pending", "signed_up", "subscribed"
  subscribedAt    DateTime? // When referee subscribed
  createdAt       DateTime  @default(now())
  
  @@index([referrerId, status])
}

model ReferralReward {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  referralId      String?
  type            String   // "referral_signup", "referral_subscription"
  rewardType      String   // "premium_days", "points", "discount"
  rewardValue     Int      // Number of days, points, or percentage
  description     String
  applied         Boolean  @default(false)
  appliedAt       DateTime?
  expiresAt       DateTime?
  createdAt       DateTime @default(now())
  
  @@index([userId, applied])
}

// Phase C: Content Management Models
model QuestionVersion {
  id              String   @id @default(cuid())
  questionId      String
  versionNumber   Int      @default(1)
  questionText    String
  options         Json
  correctAnswer   String
  explanation     String?
  difficulty      String
  tags            Json?    // Array of tags
  changedBy       String   // User/admin who made the change
  changeReason    String?
  createdAt       DateTime @default(now())
  
  @@unique([questionId, versionNumber])
  @@index([questionId])
}

model ContentSchedule {
  id              String   @id @default(cuid())
  contentType     String   // "question", "chapter", "quiz", "flashcard"
  contentId       String
  scheduledFor    DateTime
  action          String   // "publish", "unpublish", "update"
  status          String   @default("pending") // "pending", "executed", "cancelled"
  executedAt      DateTime?
  metadata        Json?    // Additional scheduling metadata
  createdBy       String   // Admin user ID
  createdAt       DateTime @default(now())
  
  @@index([status, scheduledFor])
}

model AdminActivity {
  id              String   @id @default(cuid())
  adminId         String   // Clerk user ID of admin
  adminName       String
  action          String   // "create", "update", "delete", "bulk_upload"
  resourceType    String   // "question", "user", "subscription_plan"
  resourceId      String?
  description     String
  metadata        Json?    // Additional activity details
  ipAddress       String?
  userAgent       String?
  createdAt       DateTime @default(now())
  
  @@index([adminId, createdAt])
  @@index([resourceType, createdAt])
}

// Phase E: Adaptive Learning Path Models
model LearningPath {
  id                  String               @id @default(cuid())
  userId              String
  user                User                 @relation("UserLearningPaths", fields: [userId], references: [id], onDelete: Cascade)
  title               String
  description         String?
  subjectId           String?              // Optional: specific to a subject
  goalType            String               // "exam_prep", "chapter_mastery", "skill_improvement"
  targetDate          DateTime?            // Goal completion date
  difficulty          String               @default("medium") // "easy", "medium", "hard"
  estimatedHours      Int?                 // Total estimated hours
  status              String               @default("active") // "active", "completed", "paused"
  completionPercent   Int                  @default(0)
  isAIGenerated       Boolean              @default(true)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  nodes               LearningPathNode[]
  progress            LearningPathProgress[]
  
  @@index([userId, status])
}

model LearningPathNode {
  id                  String           @id @default(cuid())
  pathId              String
  path                LearningPath     @relation(fields: [pathId], references: [id], onDelete: Cascade)
  chapterId           String
  order               Int              // Sequence in learning path
  nodeType            String           // "prerequisite", "core", "advanced", "revision"
  estimatedMinutes    Int              // Time to complete
  difficulty          String           // "easy", "medium", "hard"
  description         String?
  resources           Json?            // Links to videos, articles, etc.
  requiredAccuracy    Int              @default(70) // Required accuracy % to proceed
  isUnlocked          Boolean          @default(false)
  isCompleted         Boolean          @default(false)
  createdAt           DateTime         @default(now())
  
  @@index([pathId, order])
  @@unique([pathId, chapterId])
}

model LearningPathProgress {
  id                  String       @id @default(cuid())
  pathId              String
  path                LearningPath @relation(fields: [pathId], references: [id], onDelete: Cascade)
  nodeId              String
  userId              String
  chapterId           String
  status              String       @default("not_started") // "not_started", "in_progress", "completed", "skipped"
  attemptCount        Int          @default(0)
  bestScore           Int?         // Best score percentage
  timeSpentMinutes    Int          @default(0)
  lastAttemptAt       DateTime?
  completedAt         DateTime?
  notes               String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  
  @@unique([pathId, nodeId, userId])
  @@index([userId, pathId])
}

model PerformancePattern {
  id                  String   @id @default(cuid())
  userId              String
  patternType         String   // "strength", "weakness", "improvement", "decline"
  subjectId           String?
  chapterId           String?
  topicTag            String?  // For more granular tracking
  metric              String   // "accuracy", "speed", "consistency"
  value               Float    // Metric value
  trend               String   // "improving", "declining", "stable"
  confidence          Float    @default(0.5) // AI confidence in pattern (0-1)
  detectedAt          DateTime @default(now())
  validUntil          DateTime? // Pattern may become stale
  metadata            Json?    // Additional pattern data
  
  @@index([userId, patternType, detectedAt])
  @@index([userId, subjectId, chapterId])
}

// Phase E: Automated Question Generation Models
model QuestionGenerationJob {
  id                  String                @id @default(cuid())
  adminId             String                // Clerk user ID
  adminName           String
  subjectId           String?
  chapterIds          Json?                 // Array of chapter IDs
  questionCount       Int
  difficulty          String?               // null = mixed difficulty
  sourceType          String                // "ai", "upload", "manual"
  sourceContent       String?               // Content to generate from (for AI)
  status              String                @default("pending") // "pending", "processing", "completed", "failed"
  progress            Int                   @default(0) // 0-100
  errorMessage        String?
  totalGenerated      Int                   @default(0)
  totalApproved       Int                   @default(0)
  totalRejected       Int                   @default(0)
  startedAt           DateTime?
  completedAt         DateTime?
  createdAt           DateTime              @default(now())
  questions           GeneratedQuestion[]
  
  @@index([adminId, status])
  @@index([status, createdAt])
}

model GeneratedQuestion {
  id                  String                @id @default(cuid())
  jobId               String
  job                 QuestionGenerationJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  chapterId           String
  questionText        String
  options             Json                  // Array of options
  correctAnswer       String
  explanation         String?
  difficulty          String                @default("medium")
  tags                Json?                 // Array of topic tags
  status              String                @default("pending_review") // "pending_review", "approved", "rejected", "needs_revision"
  qualityScore        Float?                // AI-generated quality score (0-1)
  reviewNotes         String?               // Reviewer feedback
  reviewedBy          String?               // Admin ID
  reviewedAt          DateTime?
  approvedAt          DateTime?
  finalQuestionId     String?               // If approved and added to Question table
  createdAt           DateTime              @default(now())
  
  @@index([jobId, status])
  @@index([chapterId, status])
  @@index([status, createdAt])
}

model QuestionValidation {
  id                  String   @id @default(cuid())
  questionId          String   // References GeneratedQuestion or Question
  questionType        String   // "generated", "existing"
  validationType      String   // "ai_check", "duplicate_check", "quality_check", "manual_review"
  status              String   // "passed", "failed", "warning"
  score               Float?   // Validation score (0-1)
  issues              Json?    // Array of identified issues
  suggestions         Json?    // Array of improvement suggestions
  validatedBy         String?  // "ai" or admin ID
  validatedAt         DateTime @default(now())
  metadata            Json?
  
  @@index([questionId, questionType])
  @@index([validationType, status])
}

// Phase D: Practice Papers Models
model PracticePaper {
  id              String                @id @default(cuid())
  year            Int
  examType        String                // "CUET", "Class11", "Class12"
  title           String
  description     String?
  duration        Int                   // in minutes
  totalMarks      Int
  subjectId       String?               // Optional: subject filter
  questions       Json                  // Array of question IDs or embedded questions
  solutions       Json?                 // Solutions and explanations
  difficulty      String                @default("medium") // "easy", "medium", "hard"
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  attempts        PracticePaperAttempt[]
  
  @@index([examType, year])
  @@index([createdAt])
}

model PracticePaperAttempt {
  id              String        @id @default(cuid())
  userId          String
  paperId         String
  paper           PracticePaper @relation(fields: [paperId], references: [id], onDelete: Cascade)
  answers         Json          // Array of {questionId, selectedAnswer}
  score           Int           @default(0)
  totalQuestions  Int
  totalMarks      Int
  obtainedMarks   Int           @default(0)
  accuracy        Float?        // Percentage
  timeSpent       Int?          // in seconds
  startedAt       DateTime      @default(now())
  completedAt     DateTime?
  
  @@index([userId, completedAt])
  @@index([paperId])
}

// Phase D: Study Notes Models
model StudyNote {
  id          String          @id @default(cuid())
  chapterId   String
  title       String
  content     String          @db.Text
  summary     String?         @db.Text // AI-generated summary
  type        String          @default("official") // "official", "student", "ai_generated"
  authorId    String?         // Admin or user who created it
  difficulty  String          @default("medium") // "easy", "medium", "hard"
  tags        Json?           // Array of tags
  pdfUrl      String?
  views       Int             @default(0)
  likes       Int             @default(0)
  isPublished Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  bookmarks   NoteBookmark[]
  
  @@index([chapterId, isPublished])
  @@index([createdAt])
}

model NoteBookmark {
  id        String    @id @default(cuid())
  userId    String
  noteId    String
  note      StudyNote @relation(fields: [noteId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  
  @@unique([userId, noteId])
  @@index([userId])
}

// Phase D: Advanced Search Models
model SearchHistory {
  id          String   @id @default(cuid())
  userId      String
  query       String
  resultCount Int      @default(0)
  filters     Json?    // Search filters applied
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

// Phase I: Coupon System Models
model Coupon {
  id              String   @id @default(cuid())
  code            String   @unique
  description     String?
  discountType    String   // "percentage", "fixed"
  discountValue   Decimal  @db.Decimal(10, 2) // Percentage (e.g., 20.00) or fixed amount (e.g., 100.00)
  maxDiscount     Decimal? @db.Decimal(10, 2) // Max discount for percentage type
  minPurchase     Decimal? @db.Decimal(10, 2) // Minimum purchase amount
  usageLimit      Int?     // Total usage limit (null = unlimited)
  usageCount      Int      @default(0) // Current usage count
  userUsageLimit  Int      @default(1) // Per-user usage limit
  startDate       DateTime @default(now())
  endDate         DateTime?
  isActive        Boolean  @default(true)
  applicablePlans Json?    // Array of plan IDs (null = all plans)
  createdBy       String   // Admin user ID
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  usages          CouponUsage[]
  
  @@index([code, isActive])
  @@index([startDate, endDate])
}

model CouponUsage {
  id              String   @id @default(cuid())
  couponId        String
  coupon          Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  userId          String
  transactionId   String?  // Reference to Transaction
  discountAmount  Decimal  @db.Decimal(10, 2)
  usedAt          DateTime @default(now())
  
  @@index([couponId, userId])
  @@index([userId])
}

// Phase I: Affiliate Marketing Models
model Affiliate {
  id                  String            @id @default(cuid())
  userId              String?           @unique // Optional: linked user account
  companyName         String
  contactName         String
  email               String            @unique
  phone               String?
  website             String?
  status              String            @default("pending") // "pending", "approved", "rejected", "suspended"
  affiliateCode       String            @unique
  commissionRate      Decimal           @db.Decimal(5, 2) // Percentage (e.g., 15.00)
  paymentMethod       String?           // "bank_transfer", "upi", "paypal"
  paymentDetails      Json?             // Bank/UPI details
  approvedBy          String?           // Admin user ID
  approvedAt          DateTime?
  rejectedReason      String?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  clicks              AffiliateClick[]
  conversions         AffiliateConversion[]
  payouts             AffiliatePayout[]
  
  @@index([status])
  @@index([affiliateCode])
}

model AffiliateClick {
  id              String    @id @default(cuid())
  affiliateId     String
  affiliate       Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  ipAddress       String?
  userAgent       String?
  referrerUrl     String?
  landingPage     String?
  utmSource       String?
  utmMedium       String?
  utmCampaign     String?
  clickedAt       DateTime  @default(now())
  
  @@index([affiliateId, clickedAt])
}

model AffiliateConversion {
  id                  String    @id @default(cuid())
  affiliateId         String
  affiliate           Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  userId              String
  subscriptionId      String?
  transactionId       String?
  orderValue          Decimal   @db.Decimal(10, 2)
  commissionAmount    Decimal   @db.Decimal(10, 2)
  commissionRate      Decimal   @db.Decimal(5, 2)
  status              String    @default("pending") // "pending", "approved", "paid", "cancelled"
  approvedAt          DateTime?
  paidAt              DateTime?
  createdAt           DateTime  @default(now())
  
  @@index([affiliateId, status])
  @@index([userId])
}

model AffiliatePayout {
  id              String    @id @default(cuid())
  affiliateId     String
  affiliate       Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  amount          Decimal   @db.Decimal(10, 2)
  conversionIds   Json      // Array of conversion IDs included
  paymentMethod   String
  transactionRef  String?   // Bank/UPI transaction reference
  status          String    @default("pending") // "pending", "processing", "completed", "failed"
  paidBy          String?   // Admin user ID
  paidAt          DateTime?
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([affiliateId, status])
  @@index([status, createdAt])
}

model APIUsage {
  id                  String    @id @default(cuid())
  provider            String    // "openai" or "gemini"
  model               String    // "gpt-4", "gpt-3.5-turbo", "gemini-pro", etc.
  userId              String?   // User who triggered this API call (nullable for system calls)
  endpoint            String    // Which AI function called this (e.g., "generateAIQuestions", "generateAIMockTest")
  promptTokens        Int       // Tokens used in the prompt
  completionTokens    Int       // Tokens used in the response
  totalTokens         Int       // Total tokens used
  estimatedCost       Decimal   @db.Decimal(10, 6) // Cost in USD
  responseLength      Int       // Length of response in characters
  duration            Int       // Duration of API call in milliseconds
  success             Boolean   @default(true)
  errorMessage        String?   // Error message if failed
  metadata            Json?     // Additional metadata (e.g., temperature, max_tokens)
  createdAt           DateTime  @default(now())

  @@index([provider, createdAt])
  @@index([userId, createdAt])
  @@index([endpoint, createdAt])
  @@index([createdAt]) // For daily/monthly aggregation queries
}

model APIUsageAlert {
  id                  String    @id @default(cuid())
  provider            String    // "openai" or "gemini"
  alertType           String    // "daily_cost", "hourly_calls", "monthly_budget"
  threshold           Decimal   @db.Decimal(10, 2) // Dollar amount or number
  currentValue        Decimal   @db.Decimal(10, 2)
  isTriggered         Boolean   @default(false)
  notificationSent    Boolean   @default(false)
  sentAt              DateTime?
  message             String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([provider, alertType])
  @@index([isTriggered])
}

